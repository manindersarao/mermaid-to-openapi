{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/main.tsx"
  ],
  "thresholds": {
    "high": 85,
    "low": 70,
    "break": 70
  },
  "vitest": {
    "configFile": "./vite.config.ts"
  },
  "reporters": [
    "progress",
    "clear-text",
    "html"
  ]
}
