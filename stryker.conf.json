{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "ignoreStatic": true,
  "mutate": [
    "src/parser/**/*.ts",
    "src/generators/**/*.ts"
  ],
  "thresholds": {
    "high": 85,
    "low": 70,
    "break": 70
  },
  "vitest": {
    "configFile": "./vitest.config.ts"
  },
  "reporters": [
    "progress",
    "clear-text",
    "html"
  ]
}
